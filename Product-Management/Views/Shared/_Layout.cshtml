<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Product Management System</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Redressed&display=swap" rel="stylesheet">
    <script src="~/Scripts/jquery-3.5.1.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="fluid-container row">
        <div class=" col-lg-2 p-0">
            @Html.ActionLink("Product-Management", "Index", "Home", new { id = "submit", @class = "btn btn-primary btn-lg btn-block", @style = "border-radius:0px" })
        </div>
        <div class="col-lg-9">

        </div>
        <div class="float-lg-1 right pt-2">
            @Html.ActionLink(" Logout", "Logout", "Auth", "", new { @class = "btn btn-outline-success", id = "submit" })
        </div>   
    </div>
    <div class="fluid-container row h-100">
        <div class="col-lg-2 m-0" style="padding-left:0;padding-right:0">
            @Html.Partial("_Navigation")
        </div>
        <div class="col-lg-10">
            @RenderBody()
            <hr />
            <footer class="col-lg-12 position-relative">
                <p>&copy; @DateTime.Now.Year - Product Management System</p>
            </footer>
        </div>
        </div>



    
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")
    @Scripts.Render("~/Scripts/date.validator.js")
    @RenderSection("scripts", required: false)
</body>
</html>
