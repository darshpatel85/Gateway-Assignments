@model SourceControlAss.Models.Employee

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#RegisterFormId").validate({
            rules: {  
                     Password : {
                     required: true,
                     equalTo: "#ConfirmPassword"                          
                    },  
                },
            messages: {      
                    Password: {
                    value : "Enter Same Email Id."
                },  
                },                 
            });  
        }); 
    </script>

    <div>
        <br />
        <h1>Register Here</h1>
        <br />
        <div class="alert-danger">@ViewBag.error</div>
        @using (Html.BeginForm("Register", "Login", FormMethod.Post,new { @id = "RegisterFormId"}))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Email, "Email : ")
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "abc@xyz.com" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Name, "Name : ")
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Darsh" })
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "badge badge-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Gender, "Gender : ")
                @Html.RadioButtonFor(m => m.Gender, "Male", new { @class = "radio-inline" })
                @Html.LabelFor(m => m.Gender, "Male")
                @Html.RadioButtonFor(m => m.Gender, "Female", new { @class = "radio-inline" })
                @Html.LabelFor(m => m.Gender, "Female")
                @Html.ValidationMessageFor(m => m.Gender, "", new { @class = "badge badge-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MNO, "Mobile No. : ")
                @Html.TextBoxFor(m => m.MNO, new { @class = "form-control", @placeholder = "987654321" })
                @Html.ValidationMessageFor(m => m.MNO, "", new { @class = "badge badge-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.DOB, "Date of Birth : ")
                @Html.TextBoxFor(m => m.DOB, new {@id="DOB", @class = "form-control", @placeholder = "01/01/2000" })
                @Html.ValidationMessageFor(m => m.DOB, "", new { @class = "badge badge-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Image, "Upload your Image (jpg/jpeg/png) : ")
                @Html.TextBoxFor(m => m.Image,new { @type="file"})
                @Html.ValidationMessageFor(m => m.Image, "", new { @class = "badge badge-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, "Create a Password : ")
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "01/01/2000" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
            </div>

            <button type="submit" id="submit" class="btn btn-success">Submit</button>
        }
    </div>


