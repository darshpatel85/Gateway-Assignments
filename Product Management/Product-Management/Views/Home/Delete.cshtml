@model AppModel.Models.ProductModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
@if (ViewBag.status == null)
{
    <div>

        <hr />
        <h4>Are you sure you want to delete this product ?</h4>
        <div class="row col-lg-12">
            <div class="col-lg-7">
                <img src="~/images/@Model.LImg" class="img" alt="image" width="500" height="500" />
            </div>
            <div class="col-lg-4">
                <h1> @Html.DisplayFor(model => model.Name) </h1>
                <h3>
                    @Html.DisplayFor(model => model.Category)
                </h3>
                <h5>
                    @Html.DisplayFor(model => model.Price)
                </h5>
                <h4>
                    Quantity :
                    @Html.DisplayFor(model => model.Quantity)
                </h4>
                <p class="h4">
                    @Html.DisplayFor(model => model.SDes)
                </p>
                <p>
                    @Html.DisplayFor(model => model.LDes)
                </p>
                <p>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" id="submit" value="Delete" class="btn btn-default" /> |
                            @Html.ActionLink("not now", "getAll")
                        </div>
                    }
                </p>
            </div>
        </div>
    </div>
}
else
{
    <h3 class="text-center">@ViewBag.status</h3>
    @Html.ActionLink("back to list", "getAll", "Home", new { @class = "text-center" })
}

